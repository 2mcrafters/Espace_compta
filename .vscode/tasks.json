{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start backend PHP server",
			"type": "shell",
			"command": "php -S 127.0.0.1:8002 -t backend/public backend/public/index.php",
			"args": [],
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Start Vite dev server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev",
				"--prefix",
				"frontend",
				"--",
				"--port",
				"5173",
				"--strictPort",
				"--host",
				"localhost"
			],
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Frontend typecheck/build quick",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build",
				"--prefix",
				"frontend"
			],
			"isBackground": false,
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Restart Vite dev server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev",
				"--prefix",
				"frontend",
				"--",
				"--port",
				"5173",
				"--strictPort",
				"--host",
				"localhost"
			],
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Serve backend (PHP)",
			"type": "shell",
			"command": "php",
			"args": [
				"-S",
				"127.0.0.1:8002",
				"-t",
				"backend/public",
				"backend/public/index.php"
			],
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Serve frontend (Vite)",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev",
				"--prefix",
				"frontend",
				"--",
				"--port",
				"5173",
				"--strictPort",
				"--host",
				"localhost"
			],
			"isBackground": true,
			"group": "build"
		}
		,
		{
			"label": "Serve backend (PHP 8000)",
			"type": "shell",
			"command": "php",
			"args": [
				"-S",
				"localhost:8000",
				"-t",
				"backend/public",
				"backend/public/index.php"
			],
			"isBackground": true,
			"group": "build"
		}
	]
}